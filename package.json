{
  "name": "purchase-contract-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-suppliers-management": "cds watch --open suppliersmanagement/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-contracts-management": "cds watch --open contractsmanagement/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-budget-management": "cds watch --open budgetmanagement/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-approval-requests": "cds watch --open approvalrequests/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "features": {
      "ieee754compatible": true
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/suppliers-management",
    "app/contracts-management",
    "app/budget-management",
    "app/approval-requests"
  ]
}
